#!/usr/bin/env bash

# SOURCE https://github.com/adrw/.files

alias gpg2="gpg"

alias INTELLIJ_HOME="/Applications/IntelliJ IDEA.app"
alias killd='jps | grep Daemon | cut -d'\'' '\'' -f1 | xargs kill -9'

alias sqb="curl -L 'https://go.squareup.com/devbootstrap' | bash"
alias sqc="~/Development/topsoil/compost"

alias cidea="cd ~/Development/java; pants idea banklin:: franklin:: --idea-project-name=cash"
alias cfast="cd ~/Development/java; pants fast-idea --compile franklin:: banklin/banklin-shared:: --fast-idea-project-name=cash"

# Git
alias gpsm="git pull square master"

# Snowflake
alias snowsql="snowsql --username adrw@squareup.com --accountname square --authenticator externalbrowser $*"

# Kill Pulse
alias killvpn="ps j -A | grep -iE '[P]ulse' | awk '!seen[$4]++ { print $4 }' | xargs -I{} sudo kill -SIGTERM -- -{}"
